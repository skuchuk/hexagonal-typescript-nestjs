{
  "files.exclude": {
    "**/obj": true,
    "**/.vs": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/*.js.map": true,
    "**/.DS_Store": true,
    "**/*.js": {
        "when": "$(basename).ts"
    },
    ".gitignore": true,
    ".dockerignore": true,
    "node_modules": true,
    ".idea": true,
    "coverage": true
  },
  "eslint.autoFixOnSave": true,
  "eslint.validate": [{ "language": "typescript", "autoFix": true }],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
